{
  "manifest_version": 2,

  "name": "StudyPact study Tracker",
  "description": "Track your study progress and earn real money.",
  "version": "1.0",

  "permissions": ["<all_urls>" , "tabs", "pageCapture"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["main.js"]
  }
}